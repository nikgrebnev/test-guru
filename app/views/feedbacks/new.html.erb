<div class="row justify-content-center mt-3" >
  <div class="col col-md-6">

    <h5><%= t('nav.feedback') %></h5>

    <div class="card border-primary">
      <div class="card-body">

        <%= form_with url: feedbacks_path, local: true, method: :post do |form| %>
          <div class="form-group">

            <%= form.label :body %>
            <%= form.text_field :body, id: :body %>


            <%= form.submit t('nav.feedback_send'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
